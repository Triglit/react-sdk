{
	"name": "@triglit/react-sdk",
	"type": "module",
	"version": "0.5.3",
	"description": "React SDK for Triglit",
	"author": "Jo√£o Pedro <contato@triglit.com>",
	"license": "MIT",
	"exports": {
		"./package.json": "./package.json",
		"./styles.css": "./dist/styles.css",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/triglit-react-sdk.es.js",
			"require": "./dist/triglit-react-sdk.umd.js"
		}
	},
	"keywords": [
		"react",
		"triglit",
		"workflow",
		"automation"
	],
	"homepage": "https://github.com/triglit/react-sdk",
	"bugs": {
		"url": "https://github.com/triglit/react-sdk/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/triglit/react-sdk.git"
	},
	"files": [
		"dist",
		"package.json",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsc && vite build && pnpm build:css",
		"build:css": "pnpx @tailwindcss/cli -m -i ./src/tw.css -o ./dist/styles.css",
		"test": "vitest --run",
		"test:watch": "vitest",
		"preview": "vite preview",
		"analyze": "pnpm build && npx vite-bundle-analyzer dist/triglit-react-sdk.es.js",
		"size": "pnpm build && du -sh dist/* && echo 'Bundle sizes:' && ls -lah dist/*.js",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"format": "biome format --write",
		"lint": "biome check --unsafe --fix",
		"commit": "git cz"
	},
	"dependencies": {
		"@base-ui-components/react": "1.0.0-beta.4",
		"@tanstack/react-query": "^5.90.8",
		"@xyflow/react": "^12.9.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.553.0",
		"motion": "^12.23.24",
		"tailwind-merge": "^3.4.0",
		"triglit": "0.4.3"
	},
	"peerDependencies": {
		"react": "^18 || ^19",
		"react-dom": "^18 || ^19"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.5",
		"@storybook/addon-docs": "^10.0.7",
		"@storybook/addon-onboarding": "^10.0.7",
		"@storybook/react-vite": "^10.0.7",
		"@tailwindcss/cli": "^4.1.17",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.4",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"rollup-plugin-preserve-use-client": "^3.0.1",
		"storybook": "^10.0.7",
		"tailwindcss": "^4.1.17",
		"terser": "^5.44.1",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"vite-bundle-analyzer": "^1.2.3",
		"vite-plugin-banner": "^0.8.1",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^4.0.8"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
